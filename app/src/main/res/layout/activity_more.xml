    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/std_gap"
        android:layout_marginBottom="@dimen/std_gap"
        android:layout_weight="1"
        android:fontFamily="sans-serif-light"
        android:orientation="horizontal"
        android:textStyle="normal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/home_button_gap"
            android:layout_weight="1"
            android:background="@drawable/menu_background"
            android:fontFamily="sans-serif-light"
            android:onClick="homeButton"
            android:text="@string/home"
            android:textAllCaps="false"
            android:textStyle="normal" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/home_button_gap"
            android:layout_weight="1"
            android:background="@drawable/menu_background"
            android:fontFamily="sans-serif-light"
            android:onClick="docListButton"
            android:text="@string/doc_list"
            android:textAllCaps="false"
            android:textStyle="normal" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/home_button_gap"
            android:layout_weight="1"
            android:background="@drawable/menu_background"
            android:fontFamily="sans-serif-light"
            android:onClick="bmiCalculatorsButton"
            android:text="@string/check_bmi"
            android:textAllCaps="false"
            android:textStyle="normal" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/home_button_gap"
            android:layout_weight="1"
            android:background="@drawable/menu_background"
            android:fontFamily="sans-serif-light"
            android:onClick="aboutDiabetesButton"
            android:text="@string/about_you"
            android:textAllCaps="false"
            android:textStyle="normal" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/home_button_gap"
            android:layout_weight="1"
            android:background="@drawable/menu_background"
            android:fontFamily="sans-serif-light"
            android:onClick="moreButton"
            android:text="@string/more"
            android:textAllCaps="false"
            android:textStyle="normal" />


    </LinearLayout>


</LinearLayout>